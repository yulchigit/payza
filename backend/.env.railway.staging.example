NODE_ENV=production

# Railway Postgres service variable reference
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Generate once with: npm run release:secret
JWT_SECRET=replace-with-random-64-char-secret
JWT_EXPIRES_IN=7d
JWT_ISSUER=payza-api
JWT_AUDIENCE=payza-clients

BCRYPT_ROUNDS=12
AUTH_MAX_FAILED_ATTEMPTS=5
AUTH_LOCK_MINUTES=15
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=300

# After Railway generates backend public domain and Vercel domain is known,
# set CORS to exact domains only:
# CORS_ORIGINS=https://your-vercel-domain.vercel.app,capacitor://localhost
CORS_ORIGINS=https://your-vercel-domain.vercel.app,capacitor://localhost

# For first deploy keep true to run migrations once, then switch to false.
RUN_MIGRATIONS=true
